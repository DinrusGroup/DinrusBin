debug (UnitTest)
{
    unittest
    {
        auto список = new ЦиркулярныйСписок!(цел);
        список.добавь(1);
        список.добавь(2);
        список.добавь(3);

        цел i = 1;
        foreach(v; список)
        {
            assert(v == i);
            i++;
        }

        auto итер = список.обходчик;
        итер.следщ();
        итер.удали();                          // delete the первый item

        i = 2;
        foreach(v; список)
        {
            assert(v == i);
            i++;
        }

        // тест вставь functionality
        итер = список.обходчик;
        итер.следщ;
        итер.вставь(4);

        цел[] compareto = [2, 4, 3];
        i = 0;
        foreach(v; список)
        {
            assert(v == compareto[i++]);
        }
    }
}

